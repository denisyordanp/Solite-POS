<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cont_pl"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/SMargin"
	app:cardBackgroundColor="@color/white"
	app:cardElevation="0dp"
	app:cardCornerRadius="@dimen/MMargin">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/MMargin"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/iv_rv_pm_logo"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/ic_dimsum_50dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/tv_rv_pm_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="2"
			android:text="Lumpia Ayam Goreng"
			android:textSize="@dimen/MText"
			android:textStyle="bold"
			android:layout_marginStart="@dimen/MMargin"
			app:layout_constraintStart_toEndOf="@+id/iv_rv_pm_logo"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/tv_rv_pm_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/MMargin"
			android:text="Rp. 14,000"
			app:layout_constraintStart_toEndOf="@+id/iv_rv_pm_logo"
			app:layout_constraintTop_toBottomOf="@+id/tv_rv_pm_name" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
