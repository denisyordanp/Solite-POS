<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/MMargin">

	<TextView
		android:id="@+id/tv_or_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Denis Yordan"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tv_or_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:drawableStartCompat="@drawable/ic_warning"
		android:padding="@dimen/baseMargin"
		android:drawablePadding="@dimen/MMargin"
		android:text="16:30"
		android:textSize="@dimen/LLText"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tv_or_total_item"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Total 10 barang"
		android:textSize="@dimen/MText"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_or_name" />

	<TextView
		android:id="@+id/tv_or_total_pay"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Total bayar Rp. 63,000"
		android:textSize="@dimen/LLText"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_or_total_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
