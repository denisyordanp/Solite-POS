<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	android:id="@+id/cont_or"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="150dp"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/SMargin"
	app:cardElevation="0dp"
	app:cardCornerRadius="@dimen/MMargin">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/MMargin"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/iv_or_logo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/MMargin"
			android:src="@drawable/ic_cooking_50dp"/>

		<TextView
			android:id="@+id/tv_or_name"
			style="@style/CenterText"
			android:textStyle="bold"
			android:textSize="@dimen/MText"
			android:maxLines="2"
			android:text="Denis Yordan" />

		<TextView
			android:id="@+id/tv_or_total_item"
			style="@style/CenterText"
			android:text="10 barang" />

		<TextView
			android:id="@+id/tv_or_total_pay"
			style="@style/CenterText"
			android:text="Rp. 63,000" />

		<Button
			android:id="@+id/tv_or_time"
			android:textColor="@color/blackGrey"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/MMargin"
			android:textAllCaps="false"
			android:drawablePadding="@dimen/MMargin"
			android:text="16:30"
			android:textSize="@dimen/MText"
			android:textStyle="bold" />

	</LinearLayout>

</com.google.android.material.card.MaterialCardView>
