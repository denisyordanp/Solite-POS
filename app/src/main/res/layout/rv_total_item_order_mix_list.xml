<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardElevation="0dp"
	app:cardCornerRadius="0dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/tv_io_no"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/MMargin"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="parent"/>

			<TextView
				android:id="@+id/tv_io_amount"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/tv_io_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/MMargin"
				android:text="Total: "
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/tv_io_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone"
				app:layout_constraintStart_toEndOf="@+id/tv_io_amount"
				app:layout_constraintTop_toBottomOf="@+id/tv_io_name" />

			<TextView
				android:id="@+id/tv_io_variant"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/tv_io_amount"
				app:layout_constraintTop_toBottomOf="@+id/tv_io_name" />

			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:background="@color/blackGrey"
				app:layout_constraintEnd_toEndOf="@+id/tv_io_pcs"
				app:layout_constraintStart_toStartOf="@+id/tv_io_total"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/tv_io_total"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/MMargin"
				android:text="3"
				android:textStyle="bold"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/tv_io_name"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/tv_io_pcs"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/MMargin"
				android:text="Pcs"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/tv_io_total"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/whiteGrey"/>

	</LinearLayout>

</com.google.android.material.card.MaterialCardView>
