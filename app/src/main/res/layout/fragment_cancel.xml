<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_cl_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Yeay belum ada pesanan yang dibatalkan"
        android:textSize="@dimen/MText"
        android:textStyle="bold"
        android:drawablePadding="@dimen/LMargin"
        app:drawableTopCompat="@drawable/ic_happy_face"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/rv_order_list"/>

</FrameLayout>
