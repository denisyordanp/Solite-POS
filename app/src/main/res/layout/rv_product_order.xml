<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cont_pl"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="150dp"
	android:layout_height="220dp"
	android:layout_margin="@dimen/SMargin"
	app:cardBackgroundColor="@color/white"
	app:cardElevation="0dp"
	app:cardCornerRadius="@dimen/MMargin">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/MMargin"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/iv_pl_logo"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:src="@drawable/ic_dimsum_50dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/tv_pl_name"
			style="@style/CenterText"
			android:maxLines="2"
			android:text="Lumpia Ayam Goreng"
			android:textSize="@dimen/MText"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/iv_pl_logo" />

		<TextView
			android:id="@+id/tv_pl_price"
			style="@style/CenterText"
			android:text="Rp. 14,000"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_pl_name" />

		<View
			android:id="@+id/view"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/whiteGrey"
			android:layout_margin="@dimen/SMargin"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_pl_price" />

		<LinearLayout
			android:id="@+id/linearLayout2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingStart="@dimen/baseMargin"
			android:paddingEnd="@dimen/baseMargin"
			android:weightSum="3"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent">

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/btn_pl_min"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:cardElevation="0dp"
				android:layout_weight="1">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:src="@drawable/ic_remove_circle"/>

			</com.google.android.material.card.MaterialCardView>

			<TextView
				android:id="@+id/tv_pl_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:text="4"
				android:textAlignment="center"
				android:textStyle="bold" />

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/btn_pl_plus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:cardElevation="0dp"
				android:layout_weight="1">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:src="@drawable/ic_add_circle"/>

			</com.google.android.material.card.MaterialCardView>

		</LinearLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
