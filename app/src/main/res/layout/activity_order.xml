<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:weightSum="4"
	android:baselineAligned="false"
	android:orientation="horizontal"
	tools:context=".view.main.menu.order.OrderActivity">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/contDjMain"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="3"
		android:layout_margin="@dimen/contentMargin">

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/btn_nw_back"
			android:layout_width="40dp"
			android:layout_height="0dp"
			app:cardCornerRadius="0dp"
			app:cardElevation="0dp"
			app:layout_constraintBottom_toBottomOf="@+id/tab_new_order"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="@dimen/MMargin"
				android:src="@drawable/ic_back" />

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.tabs.TabLayout
			android:id="@+id/tab_new_order"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_header_new_order"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/btn_nw_back"
			app:layout_constraintTop_toTopOf="parent"
			app:tabIndicatorColor="@color/primary"
			app:tabIndicatorHeight="@dimen/SMargin"
			app:tabSelectedTextColor="@color/blackGrey"
			app:tabMode="scrollable"
			app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget" />

		<androidx.viewpager2.widget.ViewPager2
			android:id="@+id/vp_new_order"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tab_new_order" />

	</androidx.constraintlayout.widget.ConstraintLayout>

	<include
		android:id="@+id/new_order_list"
		layout="@layout/order_list"/>

</LinearLayout>
