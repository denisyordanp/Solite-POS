<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".view.main.menu.bottom.PayFragment">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_see_bottom" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/baseMargin"
		android:orientation="vertical">

		<com.google.android.material.textfield.TextInputLayout
			style="@style/TextLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/edt_vm_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:maxLines="1"
				android:hint="Masukan nama varian"/>

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.checkbox.MaterialCheckBox
			android:id="@+id/cb_vm_must"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Pilihan Wajib"/>

		<com.google.android.material.checkbox.MaterialCheckBox
			android:id="@+id/cb_vm_mix"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Mix Variant"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Pilihan berupa :"/>

		<RadioGroup
			android:id="@+id/rg_vm_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<com.google.android.material.radiobutton.MaterialRadioButton
				android:id="@+id/rb_vm_one"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Pilih satu"/>

			<com.google.android.material.radiobutton.MaterialRadioButton
				android:id="@+id/rb_vm_multiple"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Pilih banyak"/>

		</RadioGroup>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal">

		<Button
			style="@style/ButtonStyle"
			android:id="@+id/btn_vm_save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/SMargin"
			android:text="Simpan" />

		<Button
			style="@style/ButtonStyle"
			android:id="@+id/btn_vm_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/SMargin"
			android:text="Batal" />

	</LinearLayout>

</LinearLayout>
