<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_main_menu"
	android:orientation="vertical">

	<com.google.android.material.button.MaterialButton
		android:id="@+id/menu_back"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Kembali"
		style="@style/TextButton.Menu"
		android:layout_marginStart="@dimen/baseMargin"
		android:layout_marginEnd="@dimen/baseMargin"
		app:backgroundTint="@color/primary"
		app:icon="@drawable/ic_back"
		app:iconTint="@color/blackGrey" />

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/basePadding"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_menu_date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Tanggal"
				android:textColor="@color/primaryVariant" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_date"
				android:text="Pilih tanggal" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Pesanan"
				android:textColor="@color/primaryVariant" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_order"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_cook"
				android:text="Pesanan"/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_not_pay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_payment"
				android:text="Belum bayar"/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_done"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_done"
				android:text="Selesai"/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_cancel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_cancel"
				android:text="Batal"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Kedai"
				android:textColor="@color/primaryVariant"/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_recap"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_money"
				android:text="Rekap harian"/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_purchase"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_purchase"
				android:text="Pembelian"/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_history"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_history"
				android:text="Riwayat"/>

			<TextView
				android:id="@+id/tv_menu_data"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Data"
				android:textColor="@color/primaryVariant" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_master"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_masters"
				android:text="Master"/>

			<TextView
				android:id="@+id/tv_menu_application"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Aplikasi"
				android:textColor="@color/primaryVariant" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/menu_setting"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/TextButton.Menu"
				app:icon="@drawable/ic_settings"
				android:text="Pengaturan" />

		</LinearLayout>

	</androidx.core.widget.NestedScrollView>

</LinearLayout>
